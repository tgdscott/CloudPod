FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PORT=8080

# System deps for psycopg2
RUN apt-get update && apt-get install -y --no-install-recommends build-essential libpq-dev && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy the ENTIRE repo so we definitely get podcast-pro-plus/*
# (We'll trim via .dockerignore below)
COPY . /app

# Install deps â€“ prefer podcast-pro-plus/requirements.txt, else fall back to root
RUN python -m pip install --upgrade pip && \
    if [ -f /app/podcast-pro-plus/requirements.txt ]; then \
        pip install -r /app/podcast-pro-plus/requirements.txt ; \
    elif [ -f /app/requirements.txt ]; then \
        pip install -r /app/requirements.txt ; \
    else \
        pip install fastapi uvicorn google-cloud-storage google-cloud-tasks google-auth psycopg2-binary pydantic python-multipart slowapi stripe assemblyai ; \
    fi

# Make 'api' importable as a top-level module
ENV PYTHONPATH=/app/podcast-pro-plus

# Start the app
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8080"]
