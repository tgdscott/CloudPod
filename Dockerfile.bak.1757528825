# syntax=docker/dockerfile:1
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# System deps (ffmpeg only)
RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . /app

# Ensure Python sees /app/podcast-pro-plus
ENV PYTHONPATH=/app/podcast-pro-plus

# Install Python deps
RUN pip install --upgrade pip \
 && pip install --no-cache-dir -r podcast-pro-plus/requirements.txt

# Create runtime dirs so StaticFiles doesn't explode
RUN mkdir -p /tmp/media

# Cloud Run provides $PORT; default to 8080 for local runs
ENV PORT=8080

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8080"]
